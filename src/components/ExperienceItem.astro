---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div class="w-full h-full flex flex-col justify-between border border-gray-300 rounded-lg shadow-md bg-white dark:bg-gray-800 p-4 box-border">
  <div>
    <div class="flex items-center mb-4">
      <span class="text-yellow-400 mr-2">&bull;</span>
      <h3 class="text-lg font-bold text-yellow-400">{title}</h3>
    </div>
    <h4 class="text-base font-semibold text-gray-600 dark:text-white">{company}</h4>
    <time class="text-sm text-gray-600/80 dark:text-white/80 block mb-4">{date}</time>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">{description}</p>
    {link && (
      <LinkInline href={link}>
        Saber m√°s {" "}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 inline-block"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M9 6l6 6l-6 6" />
        </svg>
      </LinkInline>
    )}
  </div>
</div>
