---
const personalImageAlt = "Hernán Coronel";
import Badge from "../components/Badge.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Mail from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../components/icons/GitHub.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full size-40 mb-4"
      src="/images/profile.jpg"
      alt="hernan"
    />
  </div>

  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Hernán Coronel
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Ingeniero en Ciencias de la Computación.
    <br />
    Cuenca, Ecuador.
  </p>
  <a
    href="https://www.linkedin.com/in/hernan-jose-coronel-ramon-9062b1207/"
    target="_blank"
    rel="noopener"
    class="flex transition md:hover:scale-105 pt-4"
  >
    <Badge>Disponible para nuevos proyectos</Badge>
  </a>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill
      href="https://www.linkedin.com/in/hernan-jose-coronel-ramon-9062b1207/"
    >
      <LinkedIn class="size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/hernancr2000">
      <GitHub class="size-6" />
      GitHub
    </SocialPill>
    <SocialPill href="mailto:hernan.coronelr@gmail.com">
      <Mail class="size-6" />
      hernan.coronelr@gmail.com
    </SocialPill>
  </nav>
</div>
