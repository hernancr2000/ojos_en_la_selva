---

interface Props {
  name: string,
  description: string,
  image: string,
  caption: string,
  clase: string
}

const { name, description, image, caption, clase } = Astro.props
---

<div class="w-full h-full justify-around border border-gray-300 rounded-lg shadow-md bg-white dark:bg-gray-800 p-4 box-border">
  <div class="flex flex-col md:flex-row">

    <div class="md:w-1/2 flex flex-col">
      <div class="flex items-center mb-2">
        <span class="text-yellow-400 mr-2">&bull;</span>
        <h3 class="text-lg font-bold text-yellow-400">{name}</h3>
      </div>
      <div class="flex flex-col items-center justify-center p-3">
        <img src={image} alt="Image model" class={clase}>
        <br>
        <p class="">{caption}</p>
      </div>
    </div>
   
    
    <div class="md:w-1/2 p-5">
      <p class="text-lg text-gray-600 dark:text-gray-300 my-4">{description}</p>
    </div>
    
    
  </div>
</div>
