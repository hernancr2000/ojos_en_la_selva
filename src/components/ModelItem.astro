---
import LinkInline from "./LinkInline.astro"

interface Props {
  name: string,
  description: string,
  image: string,
  link: string
}

const { name, description, image, link } = Astro.props
---

<div class="w-full h-full justify-around border border-gray-300 rounded-lg shadow-md bg-white dark:bg-gray-800 p-4 box-border">
  <div class="flex flex-col md:flex-row">
    <div class="md:w-2/3 flex flex-col">
      <div class="flex items-center mb-2">
        <span class="text-yellow-400 mr-2">&bull;</span>
        <h3 class="text-lg font-bold text-yellow-400">{name}</h3>
      </div>
      <div class="w-auto p-3">
        <img src={image} alt="Image model">
      </div>
    </div>
   
    
    <div class="md:w-1/3">
      <p class="text-sm text-gray-600 dark:text-gray-300 my-4">{description}</p>
      {link && (
        <LinkInline href={link}>
          Saber m√°s {" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 inline-block"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M9 6l6 6l-6 6" />
          </svg>
        </LinkInline>
      )}
    </div>
    
    
  </div>
</div>