---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import SpringBoot from "./icons/SpringBoot.astro";
import Flutter from "./icons/Flutter.astro";
import Python from "./icons/Python.astro";
import Pixelcut from "./icons/Pixelcut.astro";
import Streamlit from "./icons/Sreamlit.astro";
import SocialPill from "../components/SocialPill.astro";
import open from "./icons/open.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-gray-400 text-white",
    icon: Tailwind,
  },
  SPRINGBOOT: {
    name: "SpringBoot",
    class: "bg-gray-400 text-white",
    icon: SpringBoot,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-gray-400 text-white",
    icon: Flutter,
  },  
  PYTHON: {
    name: "Python",
    class: "bg-gray-400 text-white",
    icon: Python,
    link: "https://www.python.org/downloads/"
  },
  STREAMLIT: {
    name: "Streamlit",
    class: "bg-gray-400 text-white",
    icon: Streamlit,
    link: "https://streamlit.io"
  },
  PIXELCUT: {
    name: "Pixelcut AI",
    class: "bg-gray-400 text-white",
    icon: Pixelcut,
    link: "https://www.pixelcut.ai/image-upscaler"
  },
  OPENCD: {
    name: "OpenCD",
    class: "bg-gray-400 text-white",
    icon: open,
    link: "https://github.com/likyoo/open-cd"
  }
};
const PROJECTS = [
  {
    title: "Herramientas y Tecnologías Utilizadas",
    image: "/images/Process.png",
    tags: [TAGS.PYTHON, TAGS.STREAMLIT, TAGS.PIXELCUT, TAGS.OPENCD],
  }
];
---

<div class="relative flex justify-center items-center h-full w-full">
  <div id="project-card" class="w-full overflow-auto relative p-2 box-border">
    {PROJECTS.map((project, index) => (
      <div class="project-card w-full h-full flex flex-col justify-between items-center" data-index={index}>
        <div class="flex flex-col md:flex-row gap-4">
          <!-- Contenedor de la imagen -->
          <div class="md:w-1/2">
            <img src={project.image} alt="Imagen del proyecto" class="w-full h-[400px] object-contain" />
          </div>
    
          <!-- Contenido del proyecto -->
          <div class="md:w-1/2 flex flex-col justify-start">
            <!-- Título del proyecto -->
            <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">
              {project.title}
            </h3>
    
            <!-- Etiquetas del proyecto -->
            <div class="flex flex-row mt-2">
              <ul class="m-2">
                {project.tags.map((tag) => (
                  <li class="m-2">
                    <div >
                      <SocialPill href={tag.link}>
                        <tag.icon class="size-10" />
                        {tag.name}
                      </SocialPill>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    ))}   
    
  </div>

</div>
