---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Tecnologias from "../components/Tecnologias.astro";
import Models from "../components/icons/Models.astro";
import Settings from "../components/icons/Funcionamiento.astro";
import Funcionamiento from "../components/Funcionamiento.astro";
import Visualizador from "../components/Visualizador.astro";
import Metodologia from "../components/Metodologia.astro";
---

<Layout
  title="Ojos en la Selva: Detectando Cambios"
  description="Detectar deforestación en la Amazonía usando IA para analizar imágenes satelitales, contribuyendo a la conservación de la biodiversidad."
>
  <main class="px-4">
    <SectionContainer id="inicio" class="py-20 md:py-30">
      <Hero />
    </SectionContainer>
  </main>

  <div class="space-y-24">
    <SectionContainer id="resultados">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Metodología
      </h2>
      <Metodologia />
    </SectionContainer>

    <SectionContainer id="arquitectura">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Arquitectura del Sistema
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="modelos-ia">
      <h2
      class="flex items-center mb-4 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Models class="size-8" />
        Modelos
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="visualizador">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Visualizador
      </h2>
      <Visualizador />
    </SectionContainer>    

    <SectionContainer id="funcionamiento">
      <h2
      class="flex items-center mb-4 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Settings class="size-8" />
        Funcionamiento
      </h2>
      <Funcionamiento />
    </SectionContainer>
  </div>
</Layout>
